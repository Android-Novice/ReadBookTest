<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yuqf.readbooktest.MainActivity">

    <include
        android:id="@+id/includelayout"
        layout="@layout/customtitle" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/includelayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btngetbook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/getconbooklist" />

            <Button
                android:id="@+id/btninsertbook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="@string/insertbook" />

            <Button
                android:id="@+id/btnupdatebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/updatebook" />

            <TextView
                android:id="@+id/textview_showbooklist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btngetbook"
                android:layout_centerHorizontal="true"
                android:background="@color/usertipmsgbkg" />

            <Button
                android:id="@+id/btnframelayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textview_showbooklist"
                android:text="@string/btnframelayout" />

            <Button
                android:id="@+id/btnlinearlayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/textview_showbooklist"
                android:text="@string/btnlinearlayout" />

            <Button
                android:id="@+id/btntablelayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnframelayout"
                android:text="@string/title_activity_table_layout" />

            <Button
                android:id="@+id/btnabsolutelayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/btnframelayout"
                android:text="@string/title_activity_absolute_layout" />

            <Button
                android:id="@+id/btnlistview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btntablelayout"
                android:text="@string/title_activity_list_view_activity_1" />

            <Button
                android:id="@+id/btnlistview2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btntablelayout"
                android:layout_toRightOf="@id/btnlistview1"
                android:text="@string/title_activity_list_view_activity_2" />

            <Button
                android:id="@+id/btnlistview3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btntablelayout"
                android:layout_toRightOf="@id/btnlistview2"
                android:text="@string/title_activity_list_view_activity_3" />

            <Button
                android:id="@+id/btnlistview4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnlistview1"
                android:text="@string/title_activity_list_view_activity_4" />

            <Button
                android:id="@+id/btnlistview5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnlistview1"
                android:layout_toRightOf="@id/btnlistview4"
                android:text="@string/title_activity_list_view_activity_5" />

            <Button
                android:id="@+id/btngridview1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnlistview1"
                android:layout_toRightOf="@id/btnlistview5"
                android:text="@string/title_activity_grid_view_activity_1" />

            <Button
                android:id="@+id/btnuicontrol1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btngridview1"
                android:text="@string/title_activity_uicontrols" />

            <Button
                android:id="@+id/btndialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btngridview1"
                android:layout_toRightOf="@id/btnuicontrol1"
                android:text="@string/title_activity_dialog" />

            <Button
                android:id="@+id/btnlistview6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnlistview4"
                android:layout_toRightOf="@id/btndialog"
                android:text="@string/title_activity_list_view_activity_6" />

            <Button
                android:id="@+id/btnlistview7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/btnlistview6"
                android:text="@string/title_activity_list_view_activity_7" />

            <Button
                android:id="@+id/btncontentprovider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btndialog"
                android:layout_toRightOf="@id/btnuicontrol1"
                android:text="@string/content_provider_demo" />

            <Button
                android:id="@+id/btn_sliding_drawer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/btnlistview6"
                android:text="SlidingDrawer" />

            <Button
                android:id="@+id/btn_sliding_pane_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/btnlistview7"
                android:text="SlidingPaneLayout" />

            <Button
                android:id="@+id/btn_drawer_layout_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btnlistview7"
                android:layout_centerHorizontal="true"
                android:text="DrawerLayout 1" />

            <Button
                android:id="@+id/btn_drawer_layout_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/btnlistview7"
                android:text="DrawerLayout 2" />

            <Button
                android:id="@+id/btn_floating_window"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_drawer_layout_2"
                android:text="悬浮窗" />
            <Button
                android:id="@+id/btn_view_pager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ViewPager"
                android:layout_toRightOf="@id/btn_floating_window"
                android:layout_below="@id/btn_sliding_pane_layout"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>